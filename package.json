{
    "name": "spryly",
    "version": "2.0.9",
    "description": "Make Hapi with Typescript a little less painful",
    "scripts": {
        "prepare": "node ./scripts/prepublish.js",
        "watch": "node ./node_modules/typescript/bin/tsc -p . -w",
        "build": "node ./node_modules/typescript/bin/tsc -p .",
        "test": "node ./node_modules/jest/bin/jest.js",
        "tslint": "node ./node_modules/tslint/bin/tslint -p ./tsconfig.json",
        "precommit": "npm test && npm run tslint && npm run prepare -- --hook",
        "preversion": "npm test",
        "postversion": "npm publish"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sseiber/spryly.git"
    },
    "keywords": [
        "hapi",
        "typescript",
        "di",
        "injection",
        "async"
    ],
    "main": "./dist/index.js",
    "files": [
        "/dist"
    ],
    "types": "dist/index.d.ts",
    "author": "philprice@gmail.com",
    "contributors": [
        "scott.seiber@outlook.com",
        "jerryjo@microsoft.com"
    ],
    "license": "MIT",
    "devDependencies": {
        "@types/hapi__hapi": "^20.0.1",
        "@types/jest": "^26.0.14",
        "@types/node": "^14.11.2",
        "@types/ws": "^7.2.7",
        "jest": "^26.4.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.1",
        "tslint": "^5.20.1",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "@hapi/call": "^8.0.1",
        "@hapi/hapi": "^20.0.1",
        "hapi-pino": "^8.3.0",
        "reflect-metadata": "^0.1.13",
        "ws": "^7.3.1"
    },
    "jest": {
        "rootDir": "./src/",
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ]
    }
}
